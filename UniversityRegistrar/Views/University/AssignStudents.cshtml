@using UniversityRegistrar.Models
@{
  Layout = "_Layout";
}

<div class="container">
<h3>Assign a Student to a Department</h3>
    <form action="/university/assignstudents" method="post">
        <select name="student">
            @if (@Model.Count != 0)
            {
                @foreach(StudentClass student in @Model["students"])
                {
                    <option name="student" value=@student.GetId()>@student.GetName()</option>
                }
            }
            else
            {
                <option>No Students in Database</option>
            }
        </select><br>
        <select name="department">
            @if (@Model.Count != 0)
            {
                @foreach(DepartmentClass department in @Model["departments"])
                {
                    <option name="department" value=@department.GetId()>@department.GetName()</option>
                }
            }
            else
            {
                <option>No departments in Database</option>
            }
        </select><br>
        <button id="assignButton"class="btn btn-primary btn-lg" type="submit">Assign</button>
    </form>
    <a href="/">Home Page</a><br>
</div>
